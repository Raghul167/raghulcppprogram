#include<iostream>
using namespace std;
int main()
{
    int n;
    cout<<"Enter the number";
    cin>>n;
    if(n=3)
    {
        cout<<"*      "<<endl;
        cout<<"  * * *  "<<endl;
        cout<<"   *   "<<endl;
        cout<<"  * * *   "<<endl;
        cout<<" * * * * *   "<<endl;
        cout<<"   *   "<<endl;
        cout<<"  * * *  "<<endl;
        cout<<" * * * * *  "<<endl;
        cout<<"* * * * * * * "<<endl;
        cout<<"     |  |"<<endl;
        cout<<"     |  |";
        
    }
}
